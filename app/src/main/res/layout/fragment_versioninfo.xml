<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="40dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/appinform_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/white"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:collapseIcon="@drawable/ic_launcher_background">

            <ImageButton
                android:id="@+id/iv_toolbar_back"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/ic_icons_back_basic_b"
                android:src="?attr/selectableItemBackground" />

            <TextView
                android:id="@+id/appinform_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="@string/version_info"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="normal" />

        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="58dp">

            <ImageView
                android:layout_width="125.7dp"
                android:layout_height="123.5dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/logo" />

            <TextView
                android:id="@+id/tv_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_check_auth"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="81dp"
                android:gravity="center"
                android:text="현재버전 1.0.1"
                android:textColor="@color/black80"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tv_notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_check_auth"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="28dp"
                android:gravity="center"
                android:text="@string/new_version"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tv_non_new_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_check_auth"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="28dp"
                android:gravity="center"
                android:text="@string/non_new_version"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:visibility="gone" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_update"
            android:layout_width="154dp"
            android:layout_height="42dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="128dp"
            android:text="@string/update"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="@string/about_app"
            android:textColor="@color/black"
            android:textSize="10dp"
            android:typeface="sans" />
    </RelativeLayout>

</RelativeLayout>