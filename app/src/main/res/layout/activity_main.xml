<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:id="@+id/mainDrawerView">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentInsetStart="0dp"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar">
            <RelativeLayout
                android:id="@+id/toolbar_rl"
                android:layout_width="match_parent"
                android:layout_height="84dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="32dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp"
                    android:src="@drawable/ic_notice"></ImageView>
                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="5dp"
                    android:layout_toRightOf="@id/logo"
                    android:text="신원조사접수대상자"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:onClick="gotoMain"/>
                <RelativeLayout
                    android:id="@+id/toolbar_icon_rl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/tv_title"
                    android:gravity="end"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true">
                    <RelativeLayout
                        android:id="@+id/toolbar_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageButton
                            android:id="@+id/btn_push_history"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="5px"
                            android:background="@drawable/ic_notice"
                            android:onClick="clickPushHistory"
                            android:clickable="true" />
                        <ImageButton
                            android:id="@+id/btn_purchase"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="5px"
                            android:layout_toRightOf="@id/btn_push_history"
                            android:background="@drawable/ic_notice"
                            android:onClick="clickNotice"
                            android:clickable="true" />
                        <ImageButton
                            android:id="@+id/btn_chatbot"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_toRightOf="@id/btn_purchase"
                            android:layout_marginEnd="5dp"
                            android:background="@drawable/ic_notice"
                            android:onClick="clickChatbot"
                            android:clickable="true" />
                    </RelativeLayout>
                    <ImageButton
                        android:id="@+id/btn_menu"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_toRightOf="@id/toolbar_icon"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/ic_menu"
                        android:onClick="clickMenu"
                        android:clickable="true" />
                </RelativeLayout>
            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>

        <FrameLayout
            android:id="@+id/frame_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></FrameLayout>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/splash_fl"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:id="@+id/splashscreen"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/logo" />
        </LinearLayout>

    </FrameLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:layout_marginEnd="-64dp"
        android:fitsSystemWindows="true"
        android:background="@color/white">
        <include
            layout="@layout/main_drawer"/>
    </RelativeLayout>
</androidx.drawerlayout.widget.DrawerLayout>