<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:id="@+id/mainDrawerView">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentInsetStart="0dp"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar">
            <RelativeLayout
                android:id="@+id/toolbar_rl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_85"
                android:orientation="horizontal">
                <RelativeLayout
                    android:id="@+id/logo_rl"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/size_20"
                    android:onClick="gotoMain">
                    <ImageView
                        android:id="@+id/logo"
                        android:layout_width="@dimen/size_38"
                        android:layout_height="@dimen/size_38"
                        android:layout_centerVertical="true"
                        android:src="@drawable/police_logo"></ImageView>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/logo"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tv_title_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/size_5"
                            android:text="경찰청"
                            android:textColor="@color/logo_txt1"
                            android:textSize="@dimen/font_11"
                            android:textStyle="bold"
                            />
                        <TextView
                            android:id="@+id/tv_title_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_title_1"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/size_5"
                            android:text="신원조사접수대상자"
                            android:textColor="@color/logo_txt2"
                            android:textSize="@dimen/font_11"
                            android:textStyle="bold" />
                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/toolbar_icon_rl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/logo_rl"
                    android:gravity="end"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true">
                    <RelativeLayout
                        android:id="@+id/toolbar_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <FrameLayout
                            android:id="@+id/push_fl"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageButton
                                android:id="@+id/btn_push_history"
                                android:layout_width="@dimen/size_16"
                                android:layout_height="@dimen/size_20"
                                android:layout_marginEnd="@dimen/size_10"
                                android:background="@drawable/ic_push_d"
                                android:onClick="clickPushHistory"
                                android:clickable="true" />
                            <TextView
                                android:id="@+id/bar_push_badge"
                                android:layout_width="@dimen/size_12"
                                android:layout_height="@dimen/size_12"
                                android:layout_marginLeft="@dimen/size_2"
                                android:layout_marginStart="@dimen/size_8"
                                android:layout_marginTop="1dp"
                                android:text="0"
                                android:paddingStart="@dimen/size_2"
                                android:paddingTop="-3dp"
                                android:textColor="@color/white"
                                android:textSize="@dimen/font_11"
                                android:visibility="gone"
                                android:background="@drawable/ic_point"/>
                        </FrameLayout>
                        <ImageButton
                            android:id="@+id/btn_purchase"
                            android:layout_width="@dimen/size_16"
                            android:layout_height="@dimen/size_20"
                            android:layout_marginEnd="@dimen/size_10"
                            android:layout_toRightOf="@id/push_fl"
                            android:background="@drawable/ic_purchase_d"
                            android:onClick="clickPurchase"
                            android:clickable="true" />
                        <ImageButton
                            android:id="@+id/btn_chatbot"
                            android:layout_width="@dimen/size_20"
                            android:layout_height="@dimen/size_20"
                            android:layout_toRightOf="@id/btn_purchase"
                            android:layout_marginEnd="@dimen/size_10"
                            android:background="@drawable/ic_chatbot_d"
                            android:onClick="clickChatbot"
                            android:clickable="true" />
                    </RelativeLayout>
                    <ImageButton
                        android:id="@+id/btn_menu"
                        android:layout_width="@dimen/size_18"
                        android:layout_height="@dimen/size_15"
                        android:layout_toRightOf="@id/toolbar_icon"
                        android:layout_marginEnd="@dimen/size_20"
                        android:background="@drawable/ic_memu_d"
                        android:onClick="clickMenu"
                        android:clickable="true" />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_1"
                    android:layout_alignParentBottom="true"
                    android:background="@color/bar_line" />
            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>

        <FrameLayout
            android:id="@+id/frame_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </FrameLayout>
    </LinearLayout>
